@model SearchResultsModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "myLayout";
}

@foreach (var topic in Model.Topics)
{
    <br />
    <a href="@this.Url.Action("OpenTopic", "Main", new {topic_id =topic.TopicId})">@topic.TopicTitle</a>
}


<div class="pagination">
    @if (Model.CurrentPage > 1)
    {
        <a href="@this.Url.Action("Search", "Main", new {searchParam =Model.SearchParameter,page=Model.CurrentPage-1})">Previous</a>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a href="@this.Url.Action("Search", "Main", new {searchParam =Model.SearchParameter,page=i})">@i</a>
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a href="@this.Url.Action("Search", "Main", new {searchParam =Model.SearchParameter,page=Model.CurrentPage+1})">Next</a>
    }
</div>